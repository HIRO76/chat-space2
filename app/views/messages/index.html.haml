.flash-box
  .wrapper
    .chat-side
      .side-header
        .side-header__box
          %p.side-header__box__user-name 
            = current_user.name
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
            = link_to "#" do
              %i.fa.fa-edit
            %li.side-header__box__menu__edit-user
            = link_to "#" do
              %i.fa.fa-cog
      .groups
        = link_to "#" do
          .group
            %p.group__group-name
              -# = group.name
            %p.group__latest-message アベノミクス
    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group{ data: {group: {id: "#"}} } 
            自民党
          %ul.main-header__left-box__member-list
            Member： message.user.name
            -# %li.main-header__left-box__member-list__member 
        = link_to "#", class: 'btn'do 
          .main-header__edit-btn Edit
      .messages
        = render @messages
      .form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', placeholder: '  type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'

